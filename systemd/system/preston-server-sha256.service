[Unit]
Description=Preston Server MD5 Universe

[Service]
Type=simple
User=preston
Environment=PRESTON_DIR=/tmp/preston-sha256
ExecStart=/usr/local/bin/preston server --algo sha256 --port 8081 --host localhost --remotes https://softwareheritage.org --no-cache --no-progress --data-dir=${PRESTON_DIR}/data --tmp-dir=${PRESTON_DIR}/tmp
Restart=always

[Install]
WantedBy=multi-user.target
