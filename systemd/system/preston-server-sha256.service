[Unit]
Description=Preston Server SHA256 Universe

[Service]
Type=simple
User=preston
Environment=PRESTON_DIR=/tmp/preston-sha256
ExecStart=/usr/local/bin/preston-0.4.0 server --algo sha256 --port 8082 --host localhost --remotes https://softwareheritage.org --no-cache --no-progress --data-dir=${PRESTON_DIR}/data --tmp-dir=${PRESTON_DIR}/tmp
Restart=always

[Install]
WantedBy=multi-user.target
